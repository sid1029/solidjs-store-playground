{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "files": {
		"ignore": ["node_modules/*", "dist/*"]
	},
	"vcs": {
		"enabled": true,
		"defaultBranch": "main",
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "single",
			"trailingCommas": "all"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "info"
			},
			"suspicious": {
				"noReactSpecificProps": "error"
			}
		}
	}
}
